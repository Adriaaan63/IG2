particle_system laberintoSmoke {
    billboard_type   point
    particle_width   35
    particle_height  35
    quota            200
    material         smoke
    emitter Point {
        direction       0 1 0      
        position        0 0 0
        angle           180          
        emission_rate   10         
        time_to_live    10            
        velocity_min    50           
        velocity_max    80           
        colour          0.4 0.4 0.4 0.4   
        duration        0     
