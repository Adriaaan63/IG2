particle_system fireCinematica {
    billboard_type   point                    
    particle_width   35                     
    particle_height  35                        
    quota            200    
    material         smoke                                    

    emitter Point {                           
        direction       0 1 0                
        position        0 0 0                
        angle           30                     
        emission_rate   50                                   
        velocity_min    50                     
        velocity_max    80                     
        colour          1.0 0.5 0.2 1.0       
        duration        repeat_delay                                 
    }

    affector ColourFader {                     
        red             0.06                  
        green           0.06                 
        blue            0.06                  
        alpha           -0.06                   
    }

    affector ColourImage {                     
        image           smokecolors.png        
    }

    affector Scaler {                         
        rate            -0.5                  
    }

    affector DirectionRandomiser {             
        randomness      0.5                    
        scope           1.0                    
    }

    affector Rotator {                         
        rotation_speed_range_min    -30        
        rotation_speed_range_max    55      
        rotation_range_start        0
        rotation_range_end          180   
    }
}
